<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ReceitasApp_Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorOnSecondary</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>

    <style name="RecyclerView">
        <item name="android:background">#191919</item>
    </style>

    <style name="CARDVIEW">
        <item name="cardBackgroundColor">#5E5E5E</item>
    </style>

    <style name="TABLAYOUT">
        <item name="cardBackgroundColor">#5E5E5E</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="FUNDODETAIL">
        <item name="android:background">@color/black</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.ReceitasApp" parent="Base.Theme.ReceitasApp_Dark" />
